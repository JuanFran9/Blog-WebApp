<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="/styles.css">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blogpost Website</title>
</head>
<header>
  <h1>Blogpost Website</h1>
</header>

<div class="container">
<body>
    <h1>Blogpost Website</h1>
    <form action="/posts" method="POST">
        <input type="text" name="title" placeholder="Post Title" required>
        <textarea name="content" placeholder="Post Content" required></textarea>
        <button type="submit">Create Post</button>
      </form>
      <% posts.forEach(post => { %>
        <div>
          <h2><%= post.title %></h2>
          <p><%= post.content %></p>
          <!-- Edit button -->
          <a href="/posts/<%= post.id %>/edit" class="edit-btn">Edit</a>
          <form action="/posts/<%= post.id %>/delete" method="POST" style="display: inline;">
            <button type="submit" class="delete-btn">Delete</button>
          </form>
        </div>
      <% }) %>
    <h2>Add Todo Task</h2>
        <form action="/todos" method="POST">
        <input type="text" name="task" required placeholder="Enter a new task">
        <button type="submit">Add Task</button>
    </form>
    <!-- Somewhere in an EJS file -->
    <% todos.forEach(todo => { %>
      <div>
        <p><%= todo.task %></p>
      </div>
    <% }) %>
  </div>

    
</body>
</html>
